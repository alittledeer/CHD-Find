/* 首先导入全局样式 */
@import "../../tools/commonWxss.wxss"; 
@import "../../tools/lostThing-tpl/lostThingTpl.wxss"; 
page{  
  display: flex;  
  flex-direction: column;  
  height: 100%;  
  background-color: white;
}  
/* 直接设置swiper属性 */
swiper {
  height: 500rpx;
}
swiper-item image {
  width: 100%;
  height: 100%;
}


/*=================分类导航====================*/
.navs {
  margin-top: 20rpx;
  display: flex; 
  justify-content: left; 
  flex-direction: row;
  flex-wrap: wrap;  
}
.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column; 
  /* padding: 20rpx; */
  padding-top: 20rpx;
}
.nav-item .nav-image {
  width: 80rpx;
  height: 80rpx;
  /* border-radius: 50%;设置边界圆角 */
}
.nav-item text {
  padding-top: 20rpx;
  font-size: 25rpx;
}

