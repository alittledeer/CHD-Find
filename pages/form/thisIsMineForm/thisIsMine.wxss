/* 首先导入全局样式 */
@import "../../../tools/commonWxss.wxss"; 
@import "../../../tools/lostThing-horizon-tpl/lostThingHorizonTpl.wxss"; 

.addLost-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  width:90%;
  margin-left:5%; /*左空白率*/
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  -webkit-justify-content: space-around;
  justify-content: space-around;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  border-radius: 25px;  /*圆角曲率*/
}
.tips{
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}
.systemInputOutside2 {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  width:60%;
}

.input-description{
  margin-top: 50rpx;
  width: 100%;
  border: 4rpx solid rgba(41, 39, 39, 0.829);
  box-shadow: 0 2px 4px 0 rgba(184, 182, 182, 0.2), 0 2px 10px 0 rgba(0, 0, 0, 0.19);
  font-size: small;
  font-weight: 400;
  height: 300rpx;
}

.upLoadPic{
  margin-top: 60rpx;
  margin-bottom: 60rpx;
}


.submit-contain{
  margin-top:30rpx;
  margin-bottom: 50rpx;
}
.btn{
  margin-top: 20rpx;
  background-color:rgb(33, 165, 226,0);
  border-radius:50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 900;
}
.btnImg {
  width: 90rpx;
  height: 90rpx;
}

.btn::after{
  border:0;
}
