/* 首先导入全局样式 */
@import "../../../tools/commonWxss.wxss"; 



.page{
  height: 100%;
}

.addLost-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 150rpx;
  width:90%;
  margin-left:5%;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  -webkit-justify-content: space-around;
  justify-content: space-around;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  border-radius: 5px;
}

.tips{
  margin-top: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}



.systemInputOutside1 {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  width:60%;
}

.systemInputOutside2 {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  width:60%;
}

.systemInputOutside3{
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  width:60%;
  border: 4rpx solid rgba(41, 39, 39, 0.829);
}
.input-contain{
  height:80rpx;
  width:100%;
   border: 5rpx groove gray;
   border-top: none;
   border-left:none;
   border-right: none;
   color:rgba(0, 0, 0, 0.829); 
   font-size:small; 
   font-weight:400; 
}
.input-description{
  margin-top: 50rpx;
  width: 100%;
  border: 4rpx solid rgba(41, 39, 39, 0.829);
  font-size: small;
  font-weight: 400;
  height: 300rpx;
}

.row{
  display: flex;
  height: 100rpx;
  width : 60%;
  margin-top:30rpx;
  border: 4rpx solid rgba(41, 39, 39, 0.829);
}
.row-add{
  color:#FFCC33;
  width:200rpx;
  height: 150rpx;
  text-align: left;
  padding-left: 3.8%;
  padding-top : 15rpx;
  font-size: 30rpx;
  font-family: Arial Normal;
}
.row-input{
  width:500rpx;
  height:70rpx;
  text-align: left;
  padding-top:15rpx;
  padding-left:30rpx;
  font-size: 30rpx;
  font-weight:bold ;
  color: #000000;
  font-family: Arial Normal;
}

.videoButton{
  height: 100rpx;
  width: 100%;
  margin-top:30rpx;
  color:#FFCC33;
  font-size: 34rpx;
  font-weight:bold ;
  padding-top:15rpx;
}
.myVideo{
  height: 150rpx;
  width: 100%;
}


.submit-contain{
  margin-top:30rpx;
  margin-bottom: 50rpx;
}
.btn{
  margin-top: 20rpx;
  background-color:rgb(33, 165, 226,0);
  border-radius:50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 900;
}
.btnImg {
  width: 90rpx;
  height: 90rpx;
}

.btn::after{
  border:0;
}
