page {
  height: 100%;
  width: 100%;
}
/* 上方搜索 */
.search {
  height: 100rpx;
  width: 100%;
  background: #fff;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  z-index: 99;
  padding: 0 24rpx;
}

.search .input {
  width: 100%;
  height: 80rpx;
  background: #f8f8f8;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.search .icon {
  width: 50rpx;
  height: 50rpx;
  z-index: 100;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  padding-left: 10rpx;
  font-size: 28rpx;
}
/* 分类两侧 */
.container {
  position: absolute;
  left:0;
  top:100rpx;
  width: 100%;
}

.left_part {
  position: absolute;
  left: 0;
  top:0;
  display: inline-block;
  width: 30%;
  height: 100%;
  /*主盒子设置背景色为灰色*/
  background: #f5f5f5;
  text-align: center;
}

.nav_left_item {
  height: 110rpx;
  text-align: center;
  font-size: 30rpx;
  line-height: 100rpx;
}

.active {
  color: rgb(69, 51, 236);
  background-color: #fafafa;
}

.nav_part {
  height: 90rpx;
  display: block;
  margin-top: 15rpx;
  margin-left: 30rpx;
  padding-top: 5rpx;
}

.sName {
  font-size: 30rpx;
  width: 100%;
  display: block;
}

.sContent {
  font-size: 20rpx;
  color: #949494;
  width: 100%;
  display: block;
}

.right_part {
  position: absolute;
  top:0;
  right: 0;
  height: 100%;
  width: 70%;
  background-color: #fafafa;
  padding: 10px;
  box-sizing: border-box;
  flex: 1;
}


/*右侧栏list的item*/

.right_part .right_part_items {
  /*浮动向左*/
  float: left;
  /*每个item设置宽度是33.33%*/
  width: 50%;
  height: 260rpx;
  text-align: center;
}

.right_part .right_part_items image {
  /*被图片设置宽高*/
  width: 60px;
  height: 60px;
  margin-top: 15px;
}



.nodata_text {
  color: black;
  font-size: 14px;
  text-align: center;
}

