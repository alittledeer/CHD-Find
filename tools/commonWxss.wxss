
/**=========页面背景=========**/
/*无网络状况下页面背景默认为主题色*/
page {
  background-color: #87CEEB;
}
/*普通图片背景*/
.backgroundPic{
  width: 100%;
  height:100%;
  position:fixed;
  background-size: 100% 100%;
  z-index:-1;
}
.backgroundPic1{
  width: 100%;
  height:150%;
  position:absolute;
  left:0px;
  top:0px;
  background-size: 100% 100%;
  z-index:-3;
}
.backgroundPic2{
  width: 100%;
  height:130%;
  position:absolute;
  left:0px;
  top:0px;
  background-size: 100% 100%;
  z-index:-3;
}
/**=========字体=========**/

/* 主页的广告提示 */
.adTitle{
  font-size: 14px;
  font-weight:900;
} 

.adDescrip{
  font-size: 10px;
  color: #98989f;
  display: flex;
  justify-content:space-between;
} 

/* 新增失物页系统提示字体 */
.systemFont1{
  font-size:small;
  color:#FFCC33;
  font-family:'Times New Roman', Times, serif;
  font-weight: 900;
}
/* 新增失物页广告语 */
.tips text{
  font-style:italic;
  font-weight: 700;
  font-size:larger;
  font-family: 'Times New Roman', Times, serif;
}
/* 详细功能页系统提示字体 */
.system-cue {
  font-size: 30rpx;
  height: 38rpx;
  color: rgb(9, 8, 8);
  float: left;
}
/* 按钮 */
.mySysBtn{ 
  width: 100%;
  height: 8%;
  margin-top: 15rpx;
  background-color:  #87CEEB;
  color: #000;
  font-size:30rpx;
  font-weight: bold;
  line-height:80rpx;
  border-radius: 40rpx;
  text-align:center;
}