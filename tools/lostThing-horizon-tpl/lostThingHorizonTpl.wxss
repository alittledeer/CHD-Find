
.lostThingHor {
  width: 100%;
  background-color: #fff;
  margin-bottom: 20rpx;

  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  -webkit-justify-content: space-around;
  justify-content: space-around;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  border-radius: 30rpx;
}

.address-box {
  width: 100%;
  background: no-repeat 705rpx center,
                url(https://cdn.it120.cc/images/weappshop/addr-line.png) no-repeat center bottom;
  background-size: 16rpx auto, 750rpx auto;
  margin: 20rpx 0;
}

.add-address {
  width: 664rpx;
}

 .add-address .title {
  font-size: 28rpx;
  color: #000;
  background-size: 60rpx auto;
  padding: 0rpx 0 5rpx 10rpx;
}

.lostThingHor  .myLost {
  width: 720rpx;
  margin-left: 30rpx;
  display: flex;
  /*justify-content: space-between;*/
  border-top: 1px solid #f4f4f4;
  padding: 20rpx 0 20rpx 0;


}
.lostThingHor  .myLost .img-box {
  width: 160rpx;
  height: 160rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background-color: #d8d8d8;
}
.lostThingHor .img-box .img {
  width: 160rpx;
  height: 160rpx;
}

.lostThingHor  .myLost .text-box {
  width: 510rpx;
  box-sizing: border-box;
  padding-top: 10rpx;
}

.myLost .text-box .arow {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.myLost .text-box .arow .lost-name {
  width: 360rpx;
  font-size: 26rpx;
  height: 74rpx;
  color: #000;
  line-height: 1.6;
  overflow: hidden;
}

.myLost .text-box .arow01 {
  margin-bottom: 30rpx;
}

.myLost .text-box .arow .lost-sysDes {
  font-size: 25rpx;
  color: #87CEEB;
  align-self: flex-start;
}

.myLost .text-box .arow .lost-label {
  font-size: 26rpx;
  color: #999;
}

.myLost .text-box .arow .lost-num {
  font-size: 26rpx;
  color: #999;
}


.function {
  background-color: #fff;
  border-bottom: 1px solid #f4f4f4;
  width: 100%;
  height: 38rpx;
}

.function .row-label {
  font-size: 30rpx;
  width: 20%;
  height: 38rpx;
  color: rgb(28, 65, 228);
  margin-right: 20px;
  border: 1px solid #6883cc;
  border-radius: 20%;
  text-align:center;
  float: right;
}
.function .row-cue {
  font-size: 30rpx;
  height: 38rpx;
  color: rgb(226, 103, 32);
}
