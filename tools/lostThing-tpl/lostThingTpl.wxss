/**=========失物展示框============**/
/* 由于经常使用被封装为模板页面 */
.lostThing-contain {
  display: flex;
  display: block;
  justify-content: left;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 10px 5px;
}

.lostThing-insideBlock {

  width: 47%;
  margin: 7rpx;
  margin-bottom: 20px;
  position: relative;
  display: inline-block;

  font-size: 24rpx;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
  -webkit-justify-content: space-around;
  justify-content: space-around;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  border-radius: 8rpx;
}

.lostThing-mainImage {
  width: 100%;
  display: inline-block;
  border: 1px #eee solid;
}

.lostThing-insideBlock .lostThing-name {
  color:	#4169E1;
  font-weight:bold;
  font-family:"Microsoft YaHei";
  text-shadow: rgba(255, 255, 255, 0.5) 0 5px 6px, rgba(255, 255, 255, 0.2) 1px 3px 3px;
  text-align: left;
  margin: 0px 5px;
  margin-bottom: 5px;
}

.lostThing-descripWrap {
  height: 40rpx;
}

.lostThing-descripWrap .lostThing-tags {
  position: absolute;
  right: 5px;
  background-color: rgb(252, 252, 252);
  color: rgb(0, 0, 0);
}

.lostThing-descripWrap .checkIt {
  margin-left: 5px;
  background-color: rgb(8, 8, 8);
  color: rgb(255, 255, 255);
  font-size: 10px;
}